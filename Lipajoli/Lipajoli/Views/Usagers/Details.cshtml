<h4>Historique des emprunts</h4>

@if (Model.Emprunts == null || !Model.Emprunts.Any())
{
    <p>Aucun emprunt trouvé.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Livre</th>
                <th>Date d'emprunt</th>
                <th>Date de retour</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emprunt in Model.Emprunts)
            {
                <tr class="@(emprunt.DateRetour == null)">
                    <td>@emprunt.Livre?.Titre</td>
                    <td>@emprunt.DateEmprunt.ToShortDateString()</td>
                    <td>@(emprunt.DateRetour?.ToShortDateString() ?? "Non retourné")</td>
                    <td>
                        @if (emprunt.DateRetour == null)
                        {
                            <span class="text-danger">Non retourné</span>
                        }
                        else
                        {
                            <span class="text-success">Retourné</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


